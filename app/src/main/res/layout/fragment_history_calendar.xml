<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Calendar grid -->
        <LinearLayout
            android:id="@+id/calendar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Legend / summary -->
        <TextView
            android:id="@+id/tv_calendar_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:padding="12dp" />

        <!-- Color key -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/success_green"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Under 70%"
                android:textSize="12sp"
                android:layout_marginEnd="12dp"/>

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/warning_yellow"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70â€“100%"
                android:textSize="12sp"
                android:layout_marginEnd="12dp"/>

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/danger_red"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Over limit"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
